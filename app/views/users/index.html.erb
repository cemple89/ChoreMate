<div class="CreateTitle">
  <h3> Enter Your Roommate's Email Address </h3>
</div>


<div class="new_chore_form">
  <%= form_tag :controller => 'users', :action => 'index', :method => 'get' do %>
  <div class="field">
    <%= text_field_tag :search, params[:search], :id => 'search_field'%>
  </div>
  <div class="actions">
    <%= submit_tag "Search", :name => nil %>
  </div>
  <% end %>
</div>

<ul class="result">
  <% @users.each do |user| %>
    <li><%= link_to user.name,
    :action=> 'index', :id => user.id %></li>
  <% end %>
</ul>
