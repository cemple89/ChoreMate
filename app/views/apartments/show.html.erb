            <li><%= chore.points %> point</li><br>
          <% else  %>
            <li><%= chore.points %> points</li><br>
          <% end %>
          <li>Last Completed <%= chore.user.name %> on <%= chore.last_completed.localtime.strftime('%b %e') %></li><br>
