<div class="all-users">
  <% @users.each do |user| %>
  <% @chorescore = user.chorescore %>
  <div class="user">
    <span class= "user-information" id=<%= user.id %>>
      <h5><%= user.name %></h5>
      <h5><span id= <%="user-chorescore-#{user.id}"%>><%= @chorescore %></span></h5>
    </span><br>
  </div>
 <% end %>
</div>

<h3><%= Time.now.strftime('%B %e, %Y') %></h3>


<div class="message>"
  <p id="chore-claim-message"></p>
</div>

