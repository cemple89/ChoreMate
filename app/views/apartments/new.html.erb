<div class="CreateTitle">
  <h3> Create Your Apartment </h3>
</div>

<div class="new_apartment_form">
  <%= form_for(@apartment) do |c| %>
  <div class="field">
    <%= c.label :address, "Address" %><br>
    <%= c.text_field :address %>
  </div>
  <div class="field">
    <%= c.label :city, "City" %><br>
    <%= c.text_field :city %>
  </div>
  <div class="field">
    <%= c.label :state, "State" %><br>
    <%= c.text_field :state %>
  </div>
  <div class="field">
    <%= c.label :zip_code, "Zip Code" %><br>
    <%= c.text_field :zip_code %>
  </div>
  <div class="actions">
    <%= c.submit "Create Apartment" %>
  </div>
  <% end %>
</div>
<div class="back">
  <%= link_to 'Back', root_path %>
</div>
